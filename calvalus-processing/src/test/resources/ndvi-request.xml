                    <bbox>9.0, 53.0, 14.5, 56.5</bbox> <!--baltic_sea_scene-->
                    <!--<bbox>3.0, 52.0, 9.5, 56.5</bbox> &lt;!&ndash;north_scene&ndash;&gt;-->
                    <maskExpr>!l1_flags.INVALID AND !l1_flags.BRIGHT AND l1_flags.LAND_OCEAN</maskExpr>
                    <aggregators>
                        <aggregator>
                            <type>ON_MAX_SET</type>
                            <varNames>ndvi,reflec_7,reflec_5,reflec_3</varNames>
                        </aggregator>
                    </aggregators>
                    <variables>
                        <variable>
                            <name>ndvi</name>
                            <expr>(radiance_10 - radiance_6) / (radiance_10 + radiance_6)</expr>
                        </variable>
                        <variable>
                            <name>reflec_7</name>
                            <expr>radiance_7 / ( 1531.4067 * cos(rad(sun_zenith)) )</expr>
                        </variable>
                        <variable>
                            <name>reflec_5</name>
                            <expr>radiance_5 / ( 1804.2762 * cos(rad(sun_zenith)) )</expr>
                        </variable>
                        <variable>
                            <name>reflec_3</name>
                            <expr>radiance_3 / ( 1926.6102 * cos(rad(sun_zenith)) )</expr>
